	<!--日志消息发送 -->
	<bean id="logMessageSender" class="com.ai.paas.message.MessageSender"
		init-method="init">
		<property name="cc" ref="cc" />
		<property name="confPath" value="/com/ai/paas/message/logMessageSender" />
	</bean>
	<!--通用消息发送 -->
	<bean id="messageSender" class="com.ai.paas.message.MessageSender"
		init-method="init">
		<property name="cc" ref="cc" />
		<property name="confPath" value="/com/ai/paas/message/messageSender" />
	</bean>

	<bean class="com.ai.paas.utils.MessageUtil">
		<property name="protocol" value="kafka" />
	</bean>

	<!--日志信息写入 mongodb -->
	<bean id="logWriter" class="com.ai.paas.log.MongoLogSVCImpl"
		init-method="init">
		<property name="cc" ref="cc" />
		<property name="confPath" value="/com/ai/paas/logger/conf" />
	</bean>
	<!--跟踪日志信息写入 mongodb -->
	<bean id="tradeLogWriter" class="com.ai.paas.log.MongoLogSVCImpl"
		init-method="init">
		<property name="cc" ref="cc" />
		<property name="confPath" value="/com/ai/paas/logger/tradeLogWriter" />
	</bean>
	<!--文件信息写入 mongodb -->
	<bean id="fileManager" class="com.ai.paas.file.MongoFileManagerSVCImpl"
		init-method="init">
		<property name="cc" ref="cc" />
		<property name="confPath" value="/com/ai/paas/file/conf" />
	</bean>
	<!--redis cache -->
	<bean id="cacheSvc" class="com.ai.paas.cache.remote.RemoteCacheSVCImpl"
		init-method="init">
		<property name="cc" ref="cc" />
		<property name="confPath" value="/com/ai/paas/cache/conf" />
	</bean>

	<bean id="sessionManager" class="com.ai.paas.session.SessionManager"
		init-method="init">
		<property name="cc" ref="cc" />
		<property name="confPath" value="/com/ai/paas/session/conf" />
	</bean>

	<!--此处的messageSource 不能使用通配符的方式来获取文件，也即在加载的时候，可能无法使用 classpath*的方式；需要显示指定；会造成内容文件过多。需要找方法解决； -->
	<bean id="messageSource"
		class="com.ai.paas.resource.PaasReloadableResourceBundleMessageSource">
		<property name="defaultEncoding" value="utf-8" />
		<property name="useCodeAsDefaultMessage" value="true" />
		<property name="cacheSeconds" value="10"></property>
		<property name="mappingDirectoryLocations">
			<map>
				<entry key="message" value="classpath*:/message/**/*.properties"></entry>
			</map>
		</property>
	</bean>
	<bean id="imageSv" class="com.ai.paas.image.impl.GMImage"
		init-method="init">
		<property name="confCenter" ref="cc" />
		<property name="confPath" value="/com/ai/paas/gmimage/conf" />
	</bean>


	<!-- 通用消息消费 -->
	<bean id="messageConsumer" class="com.ai.paas.message.MessageConsumer"
		init-method="init">
		<property name="cc" ref="cc" />
		<property name="confPath" value="/com/ai/paas/message/messageConsumer" />
		<property name="groupId" value="default_message_group" />
	</bean>
	<bean id="mongoSVC" class="com.ai.paas.mongo.MongoSVCImpl"
		init-method="init">
		<property name="cc" ref="cc" />
		<property name="confPath" value="/com/ai/paas/mongodb/conf" />
	</bean>
